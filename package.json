{
  "publisher": "tabeyti",
  "name": "jenkins-jack",
  "displayName": "Jenkins Jack",
  "description": "Jack into your remote Jenkins to execute Pipeline scripts, provide Pipeline step auto-completions, pull Shared Library step documenation, run console groovy scripts across multiple nodes, and more! Honestly, not that much more.",
  "icon": "images/logo.png",
  "homepage": "https://github.com/tabeyti/jenkins-jack/blob/master/README.md",
  "version": "0.1.2",
  "license": "See LICENSE.md",
  "galleryBanner": {
    "color": "#168bb9",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.30.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:groovy"
  ],
  "main": "./out/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/tabeyti/jenkins-jack.git"
  },
  "bugs": {
    "url": "https://github.com/tabeyti/jenkins-jack/issues"
  },
  "contributes": {
    "configuration": [
      {
        "title": "Jenkins Jack configuration",
        "properties": {
          "jenkins-jack.jenkins.uri": {
            "type": "string",
            "default": "127.0.0.1:8080",
            "description": "Your Jenkins root uri"
          },
          "jenkins-jack.jenkins.username": {
            "type": "string",
            "default": "",
            "description": "Username for authentication with Jenkins"
          },
          "jenkins-jack.jenkins.password": {
            "type": "string",
            "default": "",
            "description": "Password or API token to login to jenkins. Token can be found here: [jenkins_url]/user/[username]/configure"
          },
          "jenkins-jack.pipeline.params.enabled": {
            "type": "boolean",
            "default": false,
            "description": "Enables the use of a parameters file associate with your Pipeline job"
          },
          "jenkins-jack.pipeline.browserBuildOutput": {
            "type": "boolean",
            "default": false,
            "description": "Show build output via browser instead of the `OUTPUT` channel"
          },
          "jenkins-jack.pipeline.browserSharedLibraryRef": {
            "type": "boolean",
            "default": false,
            "description": "Show Pipeline Shared Library documentation via browser instead of within vscode as markdown"
          },
          "jenkins-jack.snippets.enabled": {
            "type": "boolean",
            "default": true,
            "description": "Enable Pipeline step snippets for `.groovy` files"
          }
        }
      }
    ],
    "keybindings": [
      {
        "command": "extension.jenkins-jack.jacks",
        "title": "jenkins-jack",
        "key": "ctrl+shift+j",
        "when": "editorTextFocus"
      }
    ],
    "commands": [
      {
        "command": "extension.jenkins-jack.jacks",
        "title": "Jacks",
        "category": "Jenkins Jack"
      },
      {
        "command": "extension.jenkins-jack.pipeline",
        "title": "Pipeline Jack",
        "category": "Jenkins Jack"
      },
      {
        "command": "extension.jenkins-jack.scriptConsole",
        "title": "Script Console Jack",
        "category": "Jenkins Jack"
      },
      {
        "command": "extension.jenkins-jack.buildLog",
        "title": "Build Log Jack",
        "category": "Jenkins Jack"
      }
    ],
    "languages": [
      {
        "id": "pipeline-log",
        "extensions": [ ".pipelinelog" ],
        "mimetypes": [
          "text/x-code-output",
          "x-code-output"
        ]
      }
    ],
    "grammars": [
      {
        "language": "pipeline-log",
        "scopeName": "source.pipelinelog",
        "path": "./syntaxes/pipelinelog.tmGrammer.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^3.1.4",
    "vscode": "^1.1.25",
    "tslint": "^5.8.0",
    "xml2js": "0.4.3",
    "jenkins": "^0.25.0",
    "open": "^6.2.0",
    "@types/node": "^8.10.25",
    "@types/mocha": "^2.2.42",
    "@types/cheerio": "^0.22.11",
    "@types/jenkins": "^0.23.1",
    "@types/request-promise-native": "^1.0.15",
    "@types/xml2js": "0.4.3",
    "@types/open": "^6.1.0"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.3",
    "jenkins": "^0.25.0",
    "open": "^6.2.0",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.7",
    "xml2js": "0.4.3"
  }
}
